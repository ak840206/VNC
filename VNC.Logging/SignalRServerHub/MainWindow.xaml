<Window x:Class="SignalRServerHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF SignalR Server" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBox x:Name="tbServerURI" 
                     Text="http://localhost:8095" 
                     VerticalAlignment="Top" 
                     TextChanged="tbServerURI_TextChanged" />
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button x:Name="ButtonStart" Content="Start" HorizontalAlignment="Left" Width="100" Click="ButtonStart_Click"/>
                <Button x:Name="ButtonStop" Content="Stop" HorizontalAlignment="Right" Width="100" Click="ButtonStop_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
        <RichTextBox x:Name="RichTextBoxConsole" 
                     Grid.Row="2"
                    HorizontalAlignment="Left" 
                    Margin="5" 
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
